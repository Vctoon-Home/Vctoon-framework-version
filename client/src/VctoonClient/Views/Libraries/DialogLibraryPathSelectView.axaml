<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:libraries="clr-namespace:VctoonClient.ViewModels.Libraries"
             xmlns:systems="clr-namespace:VctoonCore.Systems;assembly=VctoonCore.Application.Contracts"
             xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VctoonClient.Views.Libraries.DialogLibraryPathSelectView"

             x:DataType="libraries:DialogLibraryPathSelectViewModel">
    <Grid>

        <TreeView ItemsSource="{Binding Folders}">
            <TreeView.ItemTemplate>
                <TreeDataTemplate DataType="systems:SystemFolderDto"
                                  ItemsSource="{Binding Children}">
                    <TreeViewItem>
                        <TextBlock Text="{Binding Name}" />
                    </TreeViewItem>
                </TreeDataTemplate>

            </TreeView.ItemTemplate>
        </TreeView>

    </Grid>
</UserControl>
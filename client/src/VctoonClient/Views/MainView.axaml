<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:VctoonClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:l="clr-namespace:VctoonClient.Localizations;assembly=VctoonClient"
             xmlns:comp="clr-namespace:VctoonClient.Components;assembly=VctoonClient"
             x:Class="VctoonClient.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel />
    </Design.DataContext>

    <StackPanel Spacing="15" VerticalAlignment="Center">
        <comp:LanguageSelect></comp:LanguageSelect>
        <TextBlock Text="{l:Localize 'Save'}"></TextBlock>
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Click="Button_OnClick">test</Button>
    </StackPanel>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:VctoonClient.ViewModels"
             xmlns:main="clr-namespace:VctoonClient.Layouts.Main"
             mc:Ignorable="d"
             d:DesignWidth="1000"
             d:DesignHeight="450"
             x:DataType="viewModels:MainViewModel"
             x:Class="VctoonClient.Views.MainView">
    <Grid ColumnDefinitions="AUto, *" RowDefinitions="Auto, *">
        <main:MainHeader Grid.Row="0"
                         Grid.Column="0"
                         Grid.ColumnSpan="2" />
        <main:MainNavigationBar Grid.Row="1" Grid.Column="0" />
        <main:MainContent Grid.Row="1"
                          Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch" />

    </Grid>


</UserControl>